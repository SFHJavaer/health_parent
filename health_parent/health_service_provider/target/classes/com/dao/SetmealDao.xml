<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.SetmealDao" >
    <!--新增-->
    <insert id="add" parameterType="com.pojo.Setmeal">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_setmeal
        (code,name,sex,age,helpCode,price,remark,attention,img)
        values
        (#{code},#{name},#{sex},#{age},#{helpCode},#{price},#{remark},#{attention},#{img})
    </insert>
    <!--绑定套餐和检查组多对多关系-->
    <insert id="setSetmealAndCheckGroup" parameterType="hashmap">
        insert into t_setmeal_checkgroup
      		(setmeal_id,checkgroup_id)
      			values
      		(#{setmeal_id},#{checkgroup_id})
    </insert>
    <!--根据条件查询-->
    <select id="selectByCondition" parameterType="string" resultType="com.pojo.Setmeal">
        select * from t_setmeal
        <if test="value != null and value.length > 0">
            where code = #{value} or name = #{value} or helpCode = #{value}
        </if>
    </select>
    <select id="findAll" resultType="com.pojo.Setmeal">
  select * from t_setmeal
    </select>
    <resultMap type="com.pojo.Setmeal" id="baseResultMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="helpCode" property="helpCode"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="price" property="price"/>
        <result column="remark" property="remark"/>
        <result column="attention" property="attention"/>
        <result column="img" property="img"/>
    </resultMap>
    <resultMap type="com.pojo.Setmeal"
               id="findByIdResultMap"
               extends="baseResultMap">
        <!--mybatis的resultmap的collection标签提供了关联查询的功能
        将多对多所对应的关联的集合放到collection中，在关联表中发第二条sql进行关联嵌套查询-->
        <collection property="checkGroups"
                    javaType="ArrayList"
                    ofType="com.pojo.CheckGroup"
                    column="id"
                    select="com.dao.CheckGroupDao.findCheckGroupById">
        </collection>
    </resultMap>
    <!--下面的属性不是resulttype而是自定义的resultmap类型，然后自己手动定义标签-->
    <select id="findById" resultMap="findByIdResultMap">
  select * from t_setmeal  where id=#{id}
    </select>
</mapper>